{
    "manifest_version": 2,
    "name": "Animeaid",
    "version": "0.1.1",
    "description": "Check for newly released episodes from your favourite Anime. For those who watch anime. For free. Forever.",
    "author": "Rohith Reddy Kumbharkar",
    "icons": {
        "128": "resources/icon-128.png"
    },
    "background": {
        "scripts": [
            "bg.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "View list of watching Anime",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "http://kissanime.ru/Anime/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ]
}