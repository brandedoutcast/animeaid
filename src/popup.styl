@font-face
    font-family "icomoon"
    src url("icomoon.woff?bokiob") format("woff")
    font-weight normal
    font-style normal

[class^="icon-"], [class*=" icon-"]
    font-family "icomoon" !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

.icon-trash:before
    content "\e902"

.icon-remove:before
    content "\e900"
    color orangered

.icon-refresh:before
    content "\e901"

#app
    min-width 350px

body
    font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif
    user-select none

a
    text-decoration none
    cursor pointer

    i
        font-size 1.5em

h2
    margin 0

#collection
    h3
        margin 0.25em 0

        a
            color white

#about
    background-color darkslateblue
    color white
    text-align center
    padding 0.5em

    a
        font-weight bold

#about, #collection h3
    a
        color lightgray

        &:hover
            color white

.controls
    display flex
    justify-content space-between
    align-items center
    padding 0.5em 1em
    background-color tomato
    color white

    #refresh, #clear
        margin-left 0.5em
        font-weight bold
        cursor pointer

.item
    padding 0.5em 1em
    background-color darkslategray
    color whitesmoke
    border-bottom 0.05em solid dimgray

.header
    display flex
    justify-content space-between
    align-items center

.episodes
    display flex
    justify-content space-between

    a
        color yellow
        font-weight bold

span
    display inline-block
    padding 0.25em 0
